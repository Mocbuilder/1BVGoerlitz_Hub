@page
@model _1BVGoerlitz_Hub.Pages.KalenderModel
@{
    ViewData["Title"] = "Kalender -";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Termine und Ausschreibungen</title>

    <style>
        .btn-link {
            position: fixed;
            top: 10px;
            right: 10px;
            padding: 10px;
            background-color: darkgrey; /* Adjust the background color as needed */
            color: black; /* Adjust the text color as needed */
            border: none;
            border-radius: 10px; /* Adjust the border-radius for rounded edges */
            text-decoration: none;
            cursor: pointer;
        }

        .btn-link:hover {
            color: gray;        
        }
    </style>
</head>
<body>
    <a asp-page="/ManageFiles" class="btn-link">Admin</a>

    <div>
        <h1>Termine und Ausschreibungen</h1>

        @foreach (var pdfPath in Model.PdfPaths)
        {
            <embed src="@pdfPath" type="application/pdf" width="100%" height="600px" />
        }
    </div>
</body>
</html>
