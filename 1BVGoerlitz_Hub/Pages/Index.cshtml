@page
@model IndexModel
@{
    ViewData["Title"] = "Startseite";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Willkommen beim 1. Badminton Verein Görlitz</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-image: url('/ImgContent/Logo_1BVGoerlitz.jpg');
            background-size: cover;
            background-position: center;
            height: 100vh; /* Set the body height to the viewport height */
            color: white; /* Set text color to white */
            position: relative; /* Set position to relative to contain absolute elements */
            alt: "Img_BGLogo_HomePage ----> Error 4: Image src lost. Please contact admin";
        }

        .content {
            text-align: center;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 1;
            color: black;
        }

        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: inherit;
            filter: blur(10px);
            z-index: -1;
        }

        footer {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            padding: 20px;

            color: black;
        }

        .button-link {
            display: inline-block;
            padding: 10px 20px;
            margin-top: 20px;
            background-color: #fff;
            color: #000;
            text-decoration: none;
            font-weight: bold;
            border-radius: 20px;
           
        }

        .button-link:hover {
                background-color: lightgray;
                color: darkgrey;
        }
    </style>
</head>
<body>
    <div class="content">
        <h1 class="display-4">1. Badminton Verein Görlitz</h1>
        <a href="/About" class="button-link">Über Uns</a>
        <a href="/Mitgliedschaft" class="button-link">Mitgliedschaft</a>
        <a href="/Kalender" class="button-link">Termine</a>
    </div>
</body>
</html>


